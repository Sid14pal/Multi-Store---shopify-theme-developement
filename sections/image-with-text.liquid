<div class="skincare-banner">
  <div class="page-width page-width-desktop banner-content animate--slide-in">
    <h3>{{ section.settings.heading }}</h3>
    <p>{{ section.settings.subtext }}</p>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="banner-btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

<style>
  .skincare-banner {
    width: 100%;
    min-height: {{section.settings.banner_height}}px;
    {% if section.settings.banner_image %}
      background-image: url('{{ section.settings.banner_image | image_url }}');
    {% else %}
      background-image: url('https://via.placeholder.com/1600x600');
    {% endif %}
    background-size: cover;
    background-position: top;
    position: relative;
    padding-top: 100px;
  }

  .banner-content h3 {
    font-size: 56px;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.2;
    color: {{  section.settings.heading_bg}};
  }

  .banner-content p {
    font-size: 18px;
    margin-bottom: 25px;
    font-weight: 300;
    color: {{section.settings.subtext_bg}};
  }

  .banner-btn {
    display: inline-block;
    padding: 14px 32px;
    background: #ffffff;
    color: #111;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: 0.3s ease-in-out;
  }

  .banner-btn:hover {
    background: #f2f2f2;
  }

  @media (max-width: 768px) {
    .skincare-banner {
      padding-top: 120px;
      padding-bottom: 120px;
    }

    .banner-content h1 {
      font-size: 36px;
    }

    .banner-content p {
      font-size: 16px;
    }
  }
</style>

{% schema %}
{
  "name": "Skincare Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "Glow Naturally"
    },

    {
      "type": "color",
      "id": "heading_bg",
      "label": "Main heading bg color",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover premium skincare essentials crafted for healthy, radiant skin."
    },
      {
      "type": "color",
      "id": "subtext_bg",
      "label": "Subtext bg color",
      "default": "#fff"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "range",
      "id": "banner_height",
      "label": "Banner height (px)",
      "min": 300,
      "max": 800,
      "step": 10,
      "default": 550
    }
  ],
  "presets": [
    {
      "name": "Skincare Banner"
    }
  ]
}
{% endschema %}
